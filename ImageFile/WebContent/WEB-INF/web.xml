<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	id="WebApp_ID" version="3.0">
	
	 <servlet>
        <servlet-name>AddPhoto</servlet-name>
        <servlet-class>image.AddPhoto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPhotos</servlet-name>
        <servlet-class>image.ListPhotos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayPhoto</servlet-name>
        <servlet-class>image.DisplayPhoto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPhoto</servlet-name>
        <url-pattern>/AddPhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPhotos</servlet-name>
        <url-pattern>/ListPhotos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayPhoto</servlet-name>
        <url-pattern>/DisplayPhoto</url-pattern>
    </servlet-mapping>
    
</web-app>